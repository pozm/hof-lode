<!doctype html>
<html lang="en">
<head>

    <title>hof</title>

    <link rel="stylesheet" href="/assets/output.css" >

</head>

<body>
    <div class="container mx-auto " >

        <h1 class="text-4xl" >hi</h1>

        {% for mem in members %}
            <div class="w-full rounded-xl p-4 my-6 {% if mem.left %} bg-red-800 {% else %} bg-neutral-800 {% endif %} text-white flex flex-wrap flex-column border border-solid border-neutral-400" >

                <img class="rounded-full" loading="lazy" src="{{mem.avatar}}" alt="{{mem.name}}'s avatar" />
                <div class="ml-3" >
                <div class="flex flex-wrap justify-content items-center" >

                    <h2 class="text-2xl" >{{ mem.name }} </h2>
                    <p class="text-neutral-400 ml-2" >({{mem.id}})</p>
                </div>
                    <p>rank: {{mem.rank}}</p>
                    <p>entry: {{mem.entryDate.unwrap()}}</p>
                    {% if mem.left %}
                        <p>left: {{mem.leftDate.unwrap()}}</p>
                    {% endif %}

                </div>
            </div>

        {% endfor %}
    </div>

</body>


</html>